<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Frydlant</title>
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/jquery-3.3.1.slim.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/themes/base/base.css" rel="stylesheet" />


    <script src="~/Scripts/jquery.validate.js"></script>
    <link rel="shortcut icon" type="image/x-icon" href=~/images/zf_logo.jpg />
    <script src="~/Scripts/jquery-3.3.1.intellisense.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script src="~/Scripts/dataTables.bootsrap.js"></script>
    <link href="~/Content/datatables.min.css" rel="stylesheet" />
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>
    <script src="~/Scripts/dataTable.min.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />


</head>
<body>
    <main role="main">

        <nav id="navbar" class="navbar navbar-inverse navbar-fixed-top">
            <a href="@Url.Action("Index", "Home")"><img src="~/images/zf_logo_min.jpg" id="navImage" width="52" height="52" /></a>
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index", "AllComputer")"><span class="glyphicon glyphicon-object-align-bottom"></span> Computer database</a>
                </div>
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (User.Identity.Name != null && !User.Identity.Name.Equals(""))
                    {
                        <li><a onclick="openNav()" href="#"><span class="glyphicon glyphicon-user"></span> User: <b>@User.Identity.Name</b></a></li>
                        <li><a href='@Url.Action("Logout", "Home")' onclick="@Url.Action("Logout", "Home")"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                    }
                    else
                    {
                        <li><a href='@Url.Action("Index", "Login")'><span class="glyphicon glyphicon-log-in"></span> <b>Log In</b></a></li>
                    }
                </ul>
            </div>
        </nav>
        <div>
            @RenderBody()
            <footer class="footer navbar-fixed-bottom">
                <p>&copy; 2017 - @DateTime.Now.Year - ASP.NET Application, created with <a href="https://getbootstrap.com/">Bootstrap</a>, powered by <a href="https://www.microsoft.com/cs-cz/download/details.aspx?id=34679">Internet Information Services (IIS)</a></p>
            </footer>
        </div>
        @RenderSection("scripts", required: false)
    </main>

@if (User.Identity.Name != null && !User.Identity.Name.Equals(""))
{
    <div id="myNav" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="overlay-content">
            <a href="@Url.Action("Index", "AllUsers")">All users</a>
            <a href="#">Services</a>
            <a href="#">Clients</a>
            <a href="#">Contact</a>
        </div>
    </div>

    <script>
        function openNav() {
            document.getElementById("myNav").style.height = "100%";
        }

        function closeNav() {
            document.getElementById("myNav").style.height = "0%";
        }
    </script>

}

</body>
</html>
