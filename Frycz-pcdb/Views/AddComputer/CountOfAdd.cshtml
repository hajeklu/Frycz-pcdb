
@{
    ViewBag.Title = "CountOfAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Computer</h2>

    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>computer</h4>
</div>
<hr/>
<div id="addcount">
    @using (Html.BeginForm("AddForm", "AddComputer"))
    {
    <h2>How many computers will be add ? (between 1 and 10): </h2>
    <input name="numberofadd" class="form-control" type="number" value="1" name="quantity" min="1" max="10">
    <h2>Name of first computer: </h2>
    <input name="firstname" value="FRYCZ-" class="form-control">
    <button id="addcompbutton" class="btn btn-primary" type="submit">Submit</button>
    }
</div>
